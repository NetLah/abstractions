<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition="'$(DesignTimeBuild)' != 'true'">
    <AssemblyBuildTimeValue Condition="'$(AssemblyBuildTimeValue)' == ''">$([System.DateTime]::UtcNow.ToString("yyyy-MM-ddTHH:mm:ss:fffffffZ"))</AssemblyBuildTimeValue>
  </PropertyGroup>

  <ItemGroup Condition="'$(DesignTimeBuild)' != 'true' And '$(AssemblyBuildTimeValue)' != ''">
    <AssemblyAttribute Include="System.Reflection.AssemblyMetadataAttribute">
      <_Parameter1>BuildTime</_Parameter1>
      <_Parameter2>$(AssemblyBuildTimeValue)</_Parameter2>
    </AssemblyAttribute>
  </ItemGroup>

  <Target Name="AssemblyBuildTimeMessage" BeforeTargets="Build" Condition="'$(DesignTimeBuild)' != 'true' And '$(TargetFramework)' != '' And '$(AssemblyBuildTimeValue)' != ''">
    <Message Text="$(MSBuildProjectName) [buildTime] := $(AssemblyBuildTimeValue) ($(TargetFramework))" Importance="high" />
  </Target>

</Project>

<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition="'$(DesignTimeBuild)' != 'true'">
    <AssemblyBuildTime>$([System.DateTime]::UtcNow.ToString("yyyy-MM-ddTHH:mm:ss:fffffffZ"))</AssemblyBuildTime>
  </PropertyGroup>

  <ItemGroup Condition="'$(DesignTimeBuild)' != 'true'">
    <AssemblyAttribute Include="NetLah.Runtime.AssemblyBuildTimeAttribute">
      <_Parameter1>$(AssemblyBuildTime)</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <Target Name="AssemblyBuildTimeMessage" BeforeTargets="Build" Condition="'$(DesignTimeBuild)' != 'true' And '$(TargetFramework)' != ''">
    <Message Importance="high" Text="$(MSBuildProjectName) [buildTime] := $(AssemblyBuildTime) ($(TargetFramework))" />
  </Target>

</Project>

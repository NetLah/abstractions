<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Condition="'$(DesignTimeBuild)' != 'true'">
    <AssemblyBuildDate>$([System.DateTime]::UtcNow.ToString("yyyy-MM-ddTHH:mm:ss:fffffffZ"))</AssemblyBuildDate>
  </PropertyGroup>

  <ItemGroup Condition="'$(DesignTimeBuild)' != 'true'">
    <AssemblyAttribute Include="NetLah.Runtime.AssemblyBuildTimeAttribute">
      <_Parameter1>$(AssemblyBuildDate)</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <Target Name="AssemblyBuildDateMessage" BeforeTargets="Build" Condition="'$(DesignTimeBuild)' != 'true' And '$(TargetFramework)' != ''">
    <Message Importance="high" Text="$(MSBuildProjectName) := [set] $(AssemblyBuildDate) ($(TargetFramework))" />
  </Target>

</Project>
